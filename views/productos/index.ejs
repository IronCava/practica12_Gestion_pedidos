<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Productos</title>
  <link rel="stylesheet" href="/css/app.css">
</head>
<body>
  <div class="container">
    <% if (error) { %><div class="flash error"><%= error %></div><% } %>
    <% if (success) { %><div class="flash success"><%= success %></div><% } %>

    <header class="card" style="margin-bottom:16px;">
      <h1>Productos</h1>
      <div class="actions">
        <a class="btn" href="/admin/productos/nuevo">+ Nuevo producto</a>
        <a class="btn secondary" href="/dashboard">← Volver</a>
      </div>
    </header>

    <section class="card">
      <table>
        <thead>
          <tr>
            <th>ID</th><th>Nombre</th><th>Precio</th><th>Activo</th><th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% productos.forEach(p => { %>
            <tr>
              <td><%= p.id %></td>
              <td><%= p.nombre %></td>
              <td><%= Number(p.precio).toFixed(2) %> €</td>
              <td>
                <% if (p.activo) { %>
                  <span class="badge pago-total">Sí</span>
                <% } else { %>
                  <span class="badge pago-nada">No</span>
                <% } %>
              </td>
              <td>
                <div class="actions">
                  <a class="btn secondary" href="/admin/productos/<%= p.id %>/editar">Editar</a>
                  <form action="/admin/productos/<%= p.id %>/eliminar" method="post" onsubmit="return confirm('¿Eliminar producto?')">
                    <button class="btn danger">Eliminar</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </div>
</body>
</html>
